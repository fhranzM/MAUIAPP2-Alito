                    x:Name ="Lbl1"
                    Text="Expectation"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>

            
            <VerticalStackLayout>
                
                <ImageButton x:Name="Expect2"
                               Source ="Exp2.png"
                               HeightRequest ="200"
                               Clicked ="OnImageButtonbClicked" />
